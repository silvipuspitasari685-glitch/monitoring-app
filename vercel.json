{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/server", "dest": "/api/server.js" },
    { "src": "/script.js", "dest": "/script.js" },
    { "src": "/style.css", "dest": "/style.css" },
    { "src": "/", "dest": "/index.html" }
  ]
}